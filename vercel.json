{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/cards.json",
      "dest": "/public/cards.json"
    },
    {
      "src": "/23plusoneCards/(.*)",
      "dest": "/public/23plusoneCards/$1"
    },
    {
      "src": "/(.*\\.(html|css|js|json|jpg|png|gif))",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/scan.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
